@model Appointments
<div class="content">
	<h2>New Appointment</h2>
	<hr />
	<div class="row">
		<form asp-action="Create" moethod="post">
			@Html.AntiForgeryToken()
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" type="text" class="form-control" />
				<span asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label asp-for="Date"></label>
				<input type="datetime-local" id="Date" name="Date and Time" />
			</div>
			<div class="form-group">
				<label asp-for="Purpose"></label>
				<textarea asp-for="Purpose" class="form-control" rows="3"></textarea>
				<span asp-validation-for="Purpose"></span>
			</div>
			<div class="col-12">
				<a asp-action="Index" class="btn btn-danger">Cancel</a>
				<button type="submit" class="btn btn-success">Save</button>
			</div>
		</form>
	</div>
</div>